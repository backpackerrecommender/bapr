@{
    ViewBag.Title = "Bapr";
}

<div id="background">
    <div id="setLocation">
        <div>
            <button type="button" id="useCurrentLocation"
                    class="btn btn-danger btn-lg" onclick="GetLocation()" />
            Use current location
        </div>
        @Html.Hidden("RedirectTo", Url.Action("Menu", "Bapr", new { latitude = 0, longitude = 0 }));
        <br />
        <br />
        <input id="userOtherLocation" type="text" class="btn btn-danger input-lg" placeholder="Enter new location">
    </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD0D3HknFGgJKip1hbsPjP6SGcoYcFGnfY&signed_in=true&libraries=places&callback=initialize"
        async defer></script>
